---
import '../styles/global.css';

import MainHead from '../components/MainHead.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import { withBase } from '../utils/url';

interface Props {
  title?: string | undefined;
  description?: string | undefined;
}

const { title, description } = Astro.props;

// Compute background image paths using withBase
const bg = {
  light: {
    main800: withBase('assets/backgrounds/bg-main-light-800w.jpg'),
    main1440: withBase('assets/backgrounds/bg-main-light-1440w.jpg'),
    curves: withBase('assets/backgrounds/bg-main-light.svg'),
    subtle1_800: withBase('assets/backgrounds/bg-subtle-1-light-800w.jpg'),
    subtle2_800: withBase('assets/backgrounds/bg-subtle-2-light-800w.jpg'),
    footer_800: withBase('assets/backgrounds/bg-footer-light-800w.jpg'),
    subtle1_1440: withBase('assets/backgrounds/bg-subtle-1-light-1440w.jpg'),
    subtle2_1440: withBase('assets/backgrounds/bg-subtle-2-light-1440w.jpg'),
    footer_1440: withBase('assets/backgrounds/bg-footer-light-1440w.jpg'),
  },
  dark: {
    main800: withBase('assets/backgrounds/bg-main-dark-800w.jpg'),
    main1440: withBase('assets/backgrounds/bg-main-dark-1440w.jpg'),
    curves: withBase('assets/backgrounds/bg-main-dark.svg'),
    subtle1_800: withBase('assets/backgrounds/bg-subtle-1-dark-800w.jpg'),
    subtle2_800: withBase('assets/backgrounds/bg-subtle-2-dark-800w.jpg'),
    footer_800: withBase('assets/backgrounds/bg-footer-dark-800w.jpg'),
    subtle1_1440: withBase('assets/backgrounds/bg-subtle-1-dark-1440w.jpg'),
    subtle2_1440: withBase('assets/backgrounds/bg-subtle-2-dark-1440w.jpg'),
    footer_1440: withBase('assets/backgrounds/bg-footer-dark-1440w.jpg'),
  },
  noise: withBase('assets/backgrounds/noise.png'),
};
---

<html lang="en">
  <head>
    <MainHead title={title} description={description} />
  </head>
  <body>
    <div class="stack backgrounds">
      <Nav />
      <slot />
      <Footer />
    </div>

    <script>
      addEventListener('load', () => {
        document.documentElement.classList.add('loaded');
      });
    </script>

    <style is:global>
      :root {
        --_placeholder-bg: linear-gradient(transparent, transparent);
        --bg-image-main: url('${bg.light.main800}');
        --bg-image-main-curves: url('${bg.light.curves}');
        --bg-image-subtle-1: var(--_placeholder-bg);
        --bg-image-subtle-2: var(--_placeholder-bg);
        --bg-image-footer: var(--_placeholder-bg);
        --bg-svg-blend-mode: overlay;
        --bg-blend-mode: darken;
        --bg-image-aspect-ratio: 2.25;
        --bg-scale: 1.68;
        --bg-aspect-ratio: calc(var(--bg-image-aspect-ratio) / var(--bg-scale));
        --bg-gradient-size: calc(var(--bg-scale) * 100%);
      }

      :root.theme-dark {
        --bg-image-main: url('${bg.dark.main800}');
        --bg-image-main-curves: url('${bg.dark.curves}');
        --bg-svg-blend-mode: darken;
        --bg-blend-mode: lighten;
      }

      :root.loaded {
        --bg-image-subtle-1: url('${bg.light.subtle1_800}');
        --bg-image-subtle-2: url('${bg.light.subtle2_800}');
        --bg-image-footer: url('${bg.light.footer_800}');
      }

      :root.loaded.theme-dark {
        --bg-image-subtle-1: url('${bg.dark.subtle1_800}');
        --bg-image-subtle-2: url('${bg.dark.subtle2_800}');
        --bg-image-footer: url('${bg.dark.footer_800}');
      }

      @media (min-width: 50em) {
        :root {
          --bg-scale: 1;
          --bg-image-main: url('${bg.light.main1440}');
        }

        :root.theme-dark {
          --bg-image-main: url('${bg.dark.main1440}');
        }

        :root.loaded {
          --bg-image-subtle-1: url('${bg.light.subtle1_1440}');
          --bg-image-subtle-2: url('${bg.light.subtle2_1440}');
          --bg-image-footer: url('${bg.light.footer_1440}');
        }

        :root.loaded.theme-dark {
          --bg-image-subtle-1: url('${bg.dark.subtle1_1440}');
          --bg-image-subtle-2: url('${bg.dark.subtle2_1440}');
          --bg-image-footer: url('${bg.dark.footer_1440}');
        }
      }

      .backgrounds {
        min-height: 100%;
        isolation: isolate;
        background:
          url('${bg.noise}') top center/220px repeat,
          var(--bg-image-footer) bottom center/var(--bg-gradient-size) no-repeat,
          var(--bg-image-main-curves) top center/var(--bg-gradient-size) no-repeat,
          var(--bg-image-main) top center/var(--bg-gradient-size) no-repeat,
          var(--gray-999);
        background-blend-mode:
          overlay,
          var(--bg-blend-mode),
          var(--bg-svg-blend-mode),
          normal,
          normal;
      }

      @media (forced-colors: active) {
        .backgrounds {
          background: none;
          background-blend-mode: none;
          --bg-gradient-size: none;
        }
      }
    </style>
  </body>
</html>
